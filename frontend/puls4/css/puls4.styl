@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?mxyq4u');
	src:url('../fonts/icomoon.eot?#iefixmxyq4u') format('embedded-opentype'),
		url('../fonts/icomoon.woff?mxyq4u') format('woff'),
		url('../fonts/icomoon.ttf?mxyq4u') format('truetype'),
		url('../fonts/icomoon.svg?mxyq4u#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.5)
	paddin 1em 0
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal
		strong
			display block
		.mejor
			&:before
			&:after
				content "-"

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em 
			text-decoration none
			text-shadow 1px 1px 0px black
			margin -5px 1em 0 0
			&:before
				font-family iconos
				content "\e600"
				display inline-block
				margin 0 3px 0 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
				
		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			text-align right
			top 20px
			width 50%
			&:after
				display inline-block
				font-family iconos
				content "\e602"
				text-shadow 1px 1px 0px black



nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 45px
		line-height 40px
		margin 0
		overflow-x auto
		white-space nowrap
		padding 0

		
		li
			display inline-block
			a
				color white
				display block
				margin 0 0.3em
				padding 0 0.2em
				text-decoration none



.left
	float left

.right
	float right

.posts
	padding 0.5em


	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right
				.comentarios
					background gris_oscuro
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					border-radius 3px
				.estrellita
					text-decoration none
					&:before
						color naranja
						content: "\e601"
						font-family iconos
			
			.votos
				float left


				.down
					color red
					&:before
						font-family iconos
						content "\e602"
						vertical-align bottom

				.up
					color green
					&:before
						font-family iconos
						content "\e603"
						vertical-align bottom

				.down
				.up
					text-decoration none
					font-size 1.5em
	
				

		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px

			.autor
				margin 0.5em 0 2em 

			.fecha
				float right
				margin 0 1em 0 0
			.tag
				background azul
				border-radius 0.5em
				color white
				padding 0.2em 0.5em
				text-decoration none

			.titulo
				color gris_oscuro
				font-size 18px
				font-style italic 
				padding 0.5em 0.5em 0 0
			.imagen
				float left

				img
					height 160px
					vertical-align top
					width 120px


@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					font-size 2.5em
					left 0px
					position absolute
					top -10px

	.posts
		.post
			width 48%
			vertical-align top
			display inline-block

			&:nth-child(odd)
				margin-right 2%

